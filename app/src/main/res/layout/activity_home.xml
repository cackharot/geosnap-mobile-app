<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cackharot.geosnap.HomeActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNewSite"
        android:layout_gravity="left|top"
        android:text="@string/lblNewSite"
        android:onClick="doNavigation" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewSites"
        android:layout_gravity="center_horizontal"
        android:text="@string/lblViewSites"
        android:onClick="doNavigation" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblSettings"
        android:id="@+id/btnSettings"
        android:layout_gravity="center_horizontal"
        android:onClick="doNavigation" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblExit"
        android:id="@+id/btnExit"
        android:layout_gravity="center_horizontal"
        android:onClick="doNavigation" />
</LinearLayout>
